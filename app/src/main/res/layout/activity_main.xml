<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">



    <Button
        android:id="@+id/tv_1"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:padding="5dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="控制灯控场景" />

    <Button
        android:id="@+id/tv_2"
        android:layout_width="match_parent"
        android:padding="5dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="控制灯控通道" />

    <Button
        android:id="@+id/tv_3"
        android:layout_width="match_parent"
        android:padding="5dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="控制客控场景" />

    <Button
        android:id="@+id/tv_4"
        android:layout_width="match_parent"
        android:padding="5dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="控制客控通道" />

    <Button
        android:id="@+id/tv_5"
        android:layout_width="match_parent"
        android:padding="5dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="控制客控空调" />

    <Button
        android:id="@+id/tv_6"
        android:layout_width="match_parent"
        android:padding="5dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="控制客控窗帘" />

    <Button
        android:id="@+id/tv_7"
        android:layout_width="match_parent"
        android:padding="5dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="查询所有设备" />

    <TextView
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp" />

</LinearLayout>